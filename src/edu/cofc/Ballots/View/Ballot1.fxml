<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" 
			prefWidth="600.0" 
			xmlns:fx="http://javafx.com/fxml/1" 
			xmlns="http://javafx.com/javafx/2.2" 
			fx:controller="edu.cofc.Ballots.Controller.Ballot1Controller">
  <children>
    <Button layoutX="415.0" 
    		layoutY="334.0" 
    		mnemonicParsing="false" 
    		onAction="#handleContinueClick" 
    		text="Continue" />
    
    <Button layoutX="269.0" 
    		layoutY="334.0" 
    		mnemonicParsing="false" 
    		onAction="#handleCancelClick" 
    		text="Cancel" />
    
    <Button layoutX="148.0" 
    		layoutY="334.0" 
    		mnemonicParsing="false" 
    		onAction="#handleBackClick" 
    		text="Back" />
    		
    <GridPane layoutX="14.0" 
    		  layoutY="62.0" 
    		  prefHeight="259.0" 
    		  prefWidth="572.0">
      
      <children>
        <RadioButton fx:id="buggsBunny" 
        			 mnemonicParsing="false" 
        			 text="Buggs Bunny" 
        			 GridPane.columnIndex="0" 
        			 GridPane.rowIndex="0">
          <toggleGroup>
          
            <ToggleGroup fx:id="buttonGroup" />
          
          </toggleGroup>
        </RadioButton>
        
        <RadioButton fx:id="roadRunner" 
        			 mnemonicParsing="false" 
        			 text="Road Runner" 
        			 toggleGroup="$buttonGroup" 
        			 GridPane.columnIndex="0" 
        			 GridPane.rowIndex="1" />
        			 
        <RadioButton fx:id="daffyDuck" 
        			 mnemonicParsing="false" 
        			 text="Daffy Duck" 
        			 toggleGroup="$buttonGroup" 
        			 GridPane.columnIndex="1" 
        			 GridPane.rowIndex="0" />
        			 
        <RadioButton fx:id="wileyECyote" 
        			 mnemonicParsing="false" 
        			 text="Wiley E. Cyote" 
        			 toggleGroup="$buttonGroup" 
        			 GridPane.columnIndex="1" 
        			 GridPane.rowIndex="1" />
      </children>
      
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      </columnConstraints>
      
      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      </rowConstraints>
    </GridPane>
   
    <Text layoutX="100.0" 
    	  layoutY="46.0" 
    	  strokeType="OUTSIDE" 
    	  strokeWidth="0.0" text="House Representative Election" />
  
  </children>
</AnchorPane>
